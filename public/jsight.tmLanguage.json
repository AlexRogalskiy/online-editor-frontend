{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "JSight",
	"scopeName": "source.jsight",
	"patterns": [
		{
			"include": "#descriptionBody"
		},
		{
			"include": "#rootDirectives"
		},
		{
			"include": "#notRootDirectives"
		},
		{
			"include": "#responseDirectives"
		},
		{
			"include": "#strings"
		},
		{
			"include": "#comments"
		},
		{
			"include": "#annotations"
		},
		{
			"include": "#constants"
		},
		{
			"include": "#variables"
		}
	],
	"repository": {
		"rootDirectives": {
			"patterns": [{
				"name": "keyword.control",
				"match": "^\\s*(MACRO|PASTE|URL|GET|POST|PUT|PATCH|DELETE|INCLUDE|TYPE|RULE|ENUM|INFO|SERVER|DIR|JSIGHT|TAG)\\b"
			}]
		},
		"notRootDirectives": {
			"patterns": [{
				"name": "keyword.other.jsight",
				"match": "^\\s*(Request|Headers|Body|Query|Path|Description|Cookies|Authorization|Title|Version|BaseUrl|Value|Tags|Part|DefaultResponse)\\b"
			}]
		},
		"responseDirectives": {
			"patterns": [{
				"name": "keyword.control.jsight",
				"match": "^\\s*(\\d\\d\\d)\\b"
			}]
		},
		"strings": {
			"name": "string.quoted.double.jsight",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape.jsight",
					"match": "\\\\."
				}
			]
		},
		"comments": {
			"patterns": [
				{
					"name": "invalid.jsight",
					"begin": "###",
					"end": "###"
				},
				{
					"name": "invalid.jsight",
					"match": "#.*"
				}
			]
		},
		"annotations": {
			"patterns": [
				{
					"name": "comment.line.documentation.jsight",
					"begin": "//",
					"end": "$",
					"patterns": [
						{
							"include": "#comments"
						}
					]
				},
				{
					"name": "comment.block.documentation.jsight",
					"begin": "/\\*",
					"end": "\\*/",
					"patterns": [
						{
							"include": "#comments"
						}
					]
				}
			]
		},
		"constants": {
			"patterns": [
				{
					"name": "constant.language",
					"match": "\\btrue|false|jsight|regex|any|empty|null|json|htmlFormEncoded|noFormat|binary|multipart\\b"
				},
				{
					"name": "constant.numeric",
					"match": "\\d+\\.?\\d*"
				}
			]
		},
		"variables": {
			"patterns": [
				{
					"name": "variable.other",
					"match": "@[a-zA-Z_][a-zA-Z_0-9]*"
				}
			]
		},
		"descriptionBody": {
			"patterns": [{
				    "name": "markup.jsight",
					"begin": "(?<=^\\s*Description\\s*$)",
					"end": "(?=^\\s*(MACRO|PASTE|URL|GET|POST|PUT|PATCH|DELETE|Request|\\d\\d\\d|Headers|Body|Query|Path|Description|INCLUDE|JSIGHT|Cookies|Authorization|TYPE|RULE|ENUM|INFO|Title|Version|SERVER|BaseUrl|DIR|Value|TAG|Tags|@|###|Part)\\b)"
			}]
		}
	}
}